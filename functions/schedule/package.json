{
    "name": "@picks/schedule-function",
    "dependencies": {
        "@picks/types": "*",
        "axios": "^1.4.0",
        "dotenv": "^16.3.1",
        "mongodb": "^5.8.1"
    },
    "devDependencies": {
        "@types/archiver": "^5.3.2",
        "@types/aws-lambda": "^8.10.119",
        "@types/node": "^20.4.10",
        "archiver": "^5.3.1",
        "esbuild": "^0.19.1",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "scripts": {
        "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
        "package": "ts-node scripts/package.ts",
        "deploy": "aws lambda update-function-code --function-name picks-schedule --zip-file fileb://dist/index.zip",
        "typecheck": "tsc",
        "run-local": "ts-node -r dotenv/config src/local.ts --updateSchedule dotenv_config_path=../../.env"
    }
}
